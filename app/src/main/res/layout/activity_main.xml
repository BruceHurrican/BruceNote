<LinearLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bruce.kk.imglibcompare.MainActivity">

    <Button
        android:id="@+id/btn_glide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="glide"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_cube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cube"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_imageloader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ImageLoader"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_niv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NetWorkImageView"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_picasso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Picasso"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_fresco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fresco"
        tools:ignore="HardcodedText"/>
</LinearLayout>
